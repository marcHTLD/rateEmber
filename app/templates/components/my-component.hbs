<h1>Produkt bewerten</h1>
      <div class="spacer"></div>
      <div class="container pt-3" id="value"> 
          <div class="row">
              <div class="col-sm">
                  <div class="radio">
                    <label>Bewertung:</label>
                    {{star-rating rating=rate onClick=(action "setRating") useHalfStars=false}}
                  </div>
              </div>    
              <div class="col-sm">
                  <div class="form-group">
                      <label for="exampleFormControlTextarea1">Geben Sie hier Ihren Kommentar ein:</label>
                      {{textarea value=comment cols="50" rows="10"}}
                  </div>
              </div>
          </div>
          <div class="row">
              <div class="col-sm">
                  <form>
                      <div class="form-group">
                          <p>So werden Sie ver√∂ffentlicht:</p>
                        <label for="exampleInputEmail1">Nickname</label>
                        {{input class="form-control" placeholder="Max Mustermann" value=name}}
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword1">Wohnort</label>
                        {{input class="form-control" placeholder="Dornbirn" value=location}}
                      </div>
                    </form>
              </div>
              <div class="col-sm">
                  <div class="form-check">
                      {{input type="checkbox" class="form-check-input"}}
                      <label class="form-check-label" for="exampleCheck1">Bitte benachrichtigen Sie mich, wenn es einen Kommentar zu meiner Bewertung gibt</label>
                  </div> 
                  <button {{action "addComment"}} id="submit" type="submit" class="btn btn-primary button-right-bottom">Absenden</button>
              </div>
          </div>
      </div>
      <h1>Kommentare</h1>
      <div id="comment">
        <div>
            {{#each comments as |comment|}}
            <h3>{{comment.Name}}</h3>
            <h6>{{comment.Location}}</h6>
            <h6>{{comment.Comment}}</h6>
            <h6>{{comment.Rating}}</h6>
            {{/each}}
        </div>
        <div>
            <h5></h5>
        </div>
        <div>
          <span class="material-icons align-middle"></span>
        </div>
        <div>
            <p></p>
        </div>
      </div>